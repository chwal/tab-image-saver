{

	"manifest_version": 2,
	"name": "Tab Image Saver",
	"version": "1.0.3",
	"description": "Save largest image from each tab",
	"homepage_url": "https://github.com/mcdamo/tab-image-saver",
	"icons": {
		"16": "icons/down-16.png",
		"32": "icons/down-32.png",
		"48": "icons/down-48.png",
		"64": "icons/down-64.png",
		"96": "icons/down-96.png"
	},

	"browser_action": {
		"default_icon": {
			"16": "icons/down-16.png",
			"32": "icons/down-32.png",
			"48": "icons/down-48.png",
			"64": "icons/down-64.png",
			"96": "icons/down-96.png"
		},
		"default_title": "Tab Image Saver",
		"browser_style": true
	},

	"options_ui": {
		"page": "options.html",
		"browser_style": true
	},

	"permissions": [
		"tabs",
		"storage",
		"notifications",
		"downloads",
		"<all_urls>"
	],

	"background": {
		"scripts": ["background.js"]
	},

	"applications": {
		"gecko": {
			"id": "tab-image-saver@mcdamo.addons.mozilla.org",
			"strict_min_version": "48.0"
		}
	}
}
